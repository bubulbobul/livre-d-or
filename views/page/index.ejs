<% include header %>

<form action="/" method="POST" class="ui form">
    <div class="field">
        <label for="message">Message</label>
        <textarea name="message" id="message"></textarea>
    </div>
    <button type="submit" class="ui blue labeled submit icon button">
        <i class="icon edit"></i>Submit
    </button>
</form>

<div class="ui comments">
    <h3 class="ui dividing header">Commentaires</h3>
    <% for (message of messages)  {%>
        <div class="comment">
            <a class="avatar" href="/message/<%= message.id %>">
                <img src="https://cdn4.iconfinder.com/data/icons/instagram-ui-twotone/48/Paul-18-512.png">
            </a>
            <div class="content">
                <div class="metadata">
                    <div class="date">
                        <%= message.created_at.fromNow() %>
                    </div>
                </div>
                <div class="test">
                    <%= message.content %>
                </div>
            </div>
        </div>
    <% } %>
</div>

<% include footer %>